{
    ".textArea": {
        "height": 78,
        "width": 343,
        "touchEnabled": true,
        "visible": true,
        "backgroundColor": "rgba(255,255,255,0)",
        "alpha": 1,
        "borderColor": "#00a1f1",
        "borderWidth": 1,
        "borderRadius": 4,
        "textColor": "#000000",
        "textAlignment": "TOPLEFT",
        "font": {
            "size": 16,
            "bold": false,
            "italic": false,
			"family": "SFProText",
			"style": "Regular"
        },
        "flexProps": {
            "alignSelf": "AUTO",
            "positionType": "RELATIVE"
        },
        "&-small": {
            "width": 100
        },
        "&-medium": {
            "width": 250
        },
        "&-large": {
            "width": 350
        }
    }
}
