{
    ".button": {
        "width": 250,
        "height": 50,
        "touchEnabled": true,
        "visible": true,
        "alpha": 1,
        "borderColor": "rgba(0,0,0,1)",
        "borderWidth": 0,
        "textColor": "#FFFFFF",
        "textAlignment": "MIDCENTER",
        "backgroundColor": {
			"normal": "#00a1f1",
			"pressed": "rgba( 0, 129, 194, 1 )",
			"disabled":"rgb(210, 210, 210)"
		},
		"borderRadius": 8,
		"font": {
			"size": 16,
			"bold": true,
			"italic": false,
			"family": "SFProText",
			"style": "Semibold"
		},
        "flexProps": {
            "positionType": "RELATIVE",
            "alignSelf": "AUTO"
        },
        "&-small": {
            "width": 100
        },
        "&-medium": {
            "width": 250
        },
        "&-large": {
            "width": 350
        },
        "&-warning": {
            "backgroundColor": "#9F6000"
        },
        "&-error": {
            "backgroundColor": "#D8000C"
        },
        "&-success": {
            "backgroundColor": "#4F8A10"
        }
    }
}
